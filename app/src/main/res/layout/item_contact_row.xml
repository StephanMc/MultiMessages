<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:paddingBottom="@dimen/row_padding"
                android:paddingLeft="@dimen/activity_margin"
                android:paddingRight="@dimen/activity_margin"
                android:paddingTop="@dimen/row_padding">

    <CheckBox
        android:id="@+id/checkbox_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/>

    <com.stephanmc.multimessages.ui.RoundedImageView
        android:id="@+id/img_contact_picture"
        android:layout_width="@dimen/thumbnail"
        android:layout_height="@dimen/thumbnail"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/row_padding"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/row_padding"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/checkbox_contact"
        android:layout_toRightOf="@id/checkbox_contact"
        android:src="@drawable/ic_human"/>


    <TextView
        android:id="@+id/txt_contact_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/img_contact_picture"
        android:layout_toRightOf="@id/img_contact_picture"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/contact_name"
        android:textSize="@dimen/contact_name"/>

    <TextView
        android:id="@+id/txt_contact_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_contact_name"
        android:layout_toEndOf="@id/img_contact_picture"
        android:layout_toRightOf="@id/img_contact_picture"
        android:textColor="@color/contact_number"
        android:textSize="@dimen/contact_number"/>

</RelativeLayout>
